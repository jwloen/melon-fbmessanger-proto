<script>


    $(document).ready(function() {
        var memberKey = getMemberKey();
        if(memberKey != null && memberKey != '' && memberKey != undefined) {
            $('#userNm').html("<li> memberKey : "+ memberKey);
        }

        var pocId = getCookie("POC");
