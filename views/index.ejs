<!DOCTYPE html>
<html>
  <head>
    <title>MelOn</title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">
    <script src="/bundle.js"></script>
    
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
  </head>
 <body>
  <p class="text-info" style="padding: 10px 0 0 10px; color:#808080;">멜론을 통해 음악을 공유해보세요</p>
  <div class="content">
        <ul>
          <% tracks.forEach(function(tracks) { %>
            <a onClick = "handler('<%= tracks.artist %>','<%= tracks.title %>','<%= tracks.imgurl %>','<%= tracks.link %>')">
              <li style="padding: 0 5px 10px 10px">
                <img style="display:inline; margin-right: 10px;" src ="<%= tracks.imgurl %>/melon/resize/50" class="img-responsive" alt="Responsive image"></img>
                <span>  <%= tracks.title %> - <%= tracks.artist %> </span>
              </li>
          <% }); %>
        </ul>
        
  </div>
	<script>

  function handler(artist,title,imgurl,link){
    var subject = title + " - " + artist;
    var messageToShare = {
      "attachment":{
         "type":"template",
         "payload":{
             "template_type":"generic",
             "elements": [{
                 "title": subject,
                 "image_url": imgurl,
                 "default_action":{
                     "type":"web_url",
                     "url": link
                 },
                 "buttons":[{
                     "type":"web_url",
                     "url":"https://m.app.melon.com",
                     "title":"음악이 필요한 순간, 멜론"
                 }]
             }]
         }
      }
    };
  
    window.MessengerExtensions.beginShareFlow(
      function success(response) {
        if (response.is_sent) {
          window.MessengerExtensions.requestCloseBrowser(null, null);
        }
      }, function error(errorCode, errorMessage) {
      },
      messageToShare,
      "current_thread");  
      
  }
  window.extAsyncInit = function() {
    };
  (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'Messenger'));
    </script>
  </body>
</html>


